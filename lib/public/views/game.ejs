<html>
  <head>
    <meta charset="utf8">
    <title>글자로 놀자 끄투 온라인!</title>
    <script src='/jquery.js'></script>
    <script src='/socket.io.js'></script>
    <style>
      @import url('/views/css/game.css');
    </style>
    <script src='/views/js/game.js'></script>
    <script>
      $(function() {
        function println(data) {
          $('#oldchat').append('<%= username %> : ' + data + '\n')
          $('#oldchat').scroll($('#oldchat')[0].scrollHeight)
        }

        function msg() {
          var data = $('#inchat').val()
          println(data)
          $('#inchat').val('')
        }

        $('#send').bind('click', function(event) {
          msg()
        })
        $('#inchat').keypress(function(event) {
          if(event.keyCode == 10 || event.keyCode == 13) {
            msg()
          }
        })
      })
      </script>
  </head>
  <body>
    <% include ./bar.ejs %>
    <table>
      <tr>
        <!--상단의 <방반들기> 등의 메뉴를 갖고 있는 바-->
        <div id='menubar'>
        </div>
      </tr>
      <!--왼쪽에 위치한 접속한 유저들의 닉네임이 보이는 공간-->
      <tr>
        <td>
          <div id='users'>
          </div>
        </td>
        <!--접속 유저 오른쪽에 위치한 방들이 보이는 공간-->
        <td>
          <div id='rooms'>
          </div>
        </td>
      </tr>
      <tr>
        <!--접속 유저 아래쪽에 있는 자신의 프로필이 보이는 공간-->
        <td>
          <div id='profile'>
          </div>
        </td>
        <td>
          <!--프로필 오른쪽에 위치한 채팅공간-->
          <div id='chats'>
            <textarea id='oldchat'></textarea>
            <table>
              <tr>
                <td>
                  <input type="text" id='inchat'>
                </td>
                <td><button id='send'>전송</button></td>
              </tr>
            </table>
          </div>
        </td>
      </tr>
    </table>
  </body>
</html>